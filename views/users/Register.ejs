<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Register</title>
    <style>
        .register-form{
            width: 500px;
            margin: 0 auto;
            margin-top: 50px;
            
            
        }
        .container{
            display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      padding: 20px;
      
        }
        body{
            /* background: linear-gradient(to bottom, #4cdfea, #925a73);  */
            background-image: linear-gradient(135deg, #383fc7, #2999AD, #b5c1b9); /* Diagonal gradient from left to right */
        }
        h1{
           color: rgb(28, 15, 2);
        }
        label{
            color: rgb(25, 35, 22);
        }
    </style>
</head>
<body>
   

    <div class="container">
        <div class="row justify-content-centers">
            <div class="col">
                <h1 class="text-center text-uppercase fst-italic" >Sign Up</h1>
                <form action="/verifyRegister" method="post" class="register-form">
                    
                    <div class="mb-3">
                        <label for="email" class="fw-medium text-uppercase">email</label>
                        <input type="email" name="email" id="email" class="form-control" required>

                    </div>
                    <div class="mb-3">
                        <label for="username" class="fw-medium text-uppercase">Full Name</label>
                        <input type="text" name="uname" id="uname" class="form-control" required>
                    </div>
                   
                    <div class="mb-3">
                        <label for="password" class="form-label fw-medium text-uppercase">password</label>
                        <input type="password" name="pass" id="pass" class="form-control" required>

                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label fw-medium text-uppercase">confirm password</label>
                        <input type="password" name="cpass" id="cpass" class="form-control"  required>
                        <div id="passwordError" style="color: red;"></div>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success"> SIGN UP</button> 
                        <p>Already have an account? <a href="/" class="btn btn-primary btn-sm">Login here</a></p>
                    </div>
                    <!-- need to add form action for login and register also need to create a model for user to save the details of user -->
                </form>

            </div>

        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
    <script>
         document.addEventListener('DOMContentLoaded', function() {
            const passInput = document.getElementById('pass');
            const cpassInput = document.getElementById('cpass');
            const passwordError = document.getElementById('passwordError');
            
            function checkPassword(){
                if (passInput.value !== cpassInput.value){
                    passwordError.textContent = "passwords do not match";
                    return false;
                }else{
                    passwordError.textContent="";
                    return true;
                }
            }
            
            //Event Listener to trigger password check on completion of confirm password
            cpassInput.addEventListener('blur',checkPassword);

        });
    </script>
</body>
</html>